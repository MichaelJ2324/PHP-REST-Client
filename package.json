{
  "private": false,
  "name": "php-rest-client",
  "version": "0.7",
  "description": "An object oriented framework for interacting with REST APIs",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "phpunit || true",
    "coverage": "phpunit --coverage-html=coverage || true",
    "doc": "phpdoc -d ./src -t ./doc/ || true",
    "quality": "phpcs --standard=./ruleset.xml src/ || true",
    "all": "npm run coverage && npm run doc && npm run quality"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/michaelj2324/php-rest-client"
  },
  "bugs": {
    "url": "https://github.com/michaelj2324/php-rest-client/issues"
  },
  "homepage": "https://github.com/michaelj2324/php-rest-client"
}
